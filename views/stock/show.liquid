{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ Data.name }} -
            {% if example.ready %}
            Ready
            {% else %}
            Not Ready
            {%endif%}
        </h2>
        <h3>Amount: {{  }}</h3>
        <h6>Body: {{ }}</h6>
        {% if example.owner == userId %}
        <div class="btn-group">

            <a href="/examples/{{  }}/edit" class="btn btn-primary">Edit</a>
            <form action="/examples/{{ }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}