{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <div>
            
            <h2>{{ stockResponse.name }}</h2>
            <h6>{{ stockResponse.ticker }}</h6>
        <div>
        </div>
            <p class="bg-light"><strong>Price:</strong> ${{ stockResponse.price }}</p>
            <p><strong>Daily open:</strong> ${{ stockResponse.day_open }}</p>
            <p class="bg-light"><strong>Daily high:</strong> ${{ stockResponse.day_high }}</p>
            <p><strong>Daily low:</strong> ${{ stockResponse.day_low }}</p>
        </div>
        <!-- form action should hit stock post route, method should be post -->
        <!-- see fruits for example -->
        <form action="/stock" method="POST">
            <!-- add hidden input field for stock ticker -->
            <!-- add hidden input field for stock name -->
            <input hidden name="name" value="{{ stockResponse.name }}">
            <input hidden name="ticker" value="{{ stockResponse.ticker }}">
            <input type="submit" value="Favorite">
        </form>

        <div class="col-md-6">
            <form action="/comments/{{ stockResponse.ticker }}" method="POST">
                <fieldset>
                    <legend>Add Comment</legend>
                    <label class="form-label">Comment: </label>
                    <input type="text" class="form-control" name="note" placeholder="enter comment here...">
                </fieldset>
                <input type="submit" class="btn btn-success" value="Add Comment">
            </form>
        </div>

        <div class="container-sm justify-content-center">
            <div class="col-md-8 col-lg-6">
                <!-- here we need to loop over the comments -->
                <!-- for every comment render a comment.liquid block -->
                {% for comment in stock.comments %}
                    {% render '../comment.liquid', comment: comment, userId: userId, stockResponse: ResponseData %}
                {% endfor %}
            </div>
        </div>        
    </article>
</div>
{% endblock %}